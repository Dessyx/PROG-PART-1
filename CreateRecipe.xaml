<Window x:Class="RecipeAPP.CreateRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeAPP"
        mc:Ignorable="d"
        Title="Create Recipe" Height="234" Width="464">
    <Grid Margin="0,0,-250,2">
        <Label Name="numRecipelbl" Content="Create Recipe" HorizontalAlignment="Left" Height="32" Margin="21,21,0,0" VerticalAlignment="Top" Width="225" FontWeight="Bold" FontSize="16"/>
        <Label Content="Recipe Name:" HorizontalAlignment="Left" Height="29" Margin="21,77,0,0" VerticalAlignment="Top" Width="94"/>
        <TextBox x:Name="RecipeNameTextBox" Margin="189,77,333,0" Height="26" VerticalAlignment="Top"/>
        <Label Content="Number of ingredients:" HorizontalAlignment="Left" Height="30" Margin="21,122,0,0" VerticalAlignment="Top" Width="144"/>
        <TextBox x:Name="NumberIngredientsText" Margin="189,124,333,0" Height="26" VerticalAlignment="Top"/>
        <Button Content="Add Ingredients" HorizontalAlignment="Left" Height="30" Margin="202,176,0,0" VerticalAlignment="Top" Width="166" Click="AddIngredients_Click" Background="#FFFF5299"/>

    </Grid>
</Window>
